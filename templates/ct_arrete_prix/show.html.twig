{% extends 'base.html.twig' %}

{% block title %}Arrêté Prix{% endblock %}

{% block body %}
    <h1>Arrêté Prix</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ct_arrete_prix.id }}</td>
            </tr>
            <tr>
                <th>numéro</th>
                <td>{{ ct_arrete_prix.artNumero }}</td>
            </tr>
            <tr>
                <th>date</th>
                <td>{{ ct_arrete_prix.artDate ? ct_arrete_prix.artDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>date d'application</th>
                <td>{{ ct_arrete_prix.artDateApplication ? ct_arrete_prix.artDateApplication|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>created_at</th>
                <td>{{ ct_arrete_prix.artCreatedAt ? ct_arrete_prix.artCreatedAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>updated_at</th>
                <td>{{ ct_arrete_prix.artUpdatedAt ? ct_arrete_prix.artUpdatedAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>

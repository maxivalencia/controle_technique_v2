<html>
    <head>
        <meta charset="UTF-8">
        <title>Fiche de controle isole</title>
    </head>
    <body style="font-size:12px">
        <table style="font-size:12px">
            <tr>
                <td width="300" align="center">
                    DIRECTION GENERALE DE LA SECURITE ROUTIERE
                    <br>-----------------------------<br>
                    DIRECTION DES OPERATIONS ROUTIERE
                    <br>-----------------------------<br>
                    CENTRE DE SECURITE ROUTIERE
                    <br>-----------------------------<br>
                    {# <img src="{{ logo }}" alt="logo" width="50px" height="50px" type="images/png"> #}
                    <img src="{{ logo }}" alt="logo" width="50px" height="50px" type="images/png">
                    <br>« LAHITOKANA NY AINA » 
                </td>
                <td width="250">
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                </td>
                <td width="200" align="center" valign="top">
                    {% set trans_day_hash = { 
                            "January": "Janvier", 
                            "February": "Février", 
                            "March": "Mars", 
                            "April": "Avril", 
                            "May": "Mai", 
                            "June": "Juin", 
                            "July": "Juillet",
                            "August": "Août",
                            "September": "Septembre",
                            "October": "Octobre",
                            "November": "Novembre",
                            "December": "Decembre" 
                        } 
                    %}
                    REPOBLIKAN’I MADAGASIKARA<br>
                    Fitiavana-Tanindrazana-Fandrosoana
                    <br><br>--------------------------<br><br>
                    Antananarivo, le {{ "now"|date('d') }} {{ trans_day_hash["now"|date('F')] }} {{ "now"|date('Y') }}
                    <br><br>--------------------------<br><br>
                </td>
            </tr>
        </table>
        <div align="center"><u><H3>FICHE DE CONTROLE DES VEHICULES RECEPTION {{ type }}</H3></u></div>
        <table>
            <tr>
                <td width="200" align="left"><u>Centre :</u> <strong>{{ province }}</strong></td>
                <td width="350" align="center"><strong><span style="font-size:14px">{{ centre }}</span></strong></td>
                <td width="200" align="right"> en date de : <strong>{{ date_reception|date('d') }} {{ trans_day_hash[date_reception|date('F')] }} {{ date_reception|date('Y') }}</strong></td>
            </tr>
        </table>
        <table align="center" style="border: 2px solid black;border-collapse: collapse;">
            <tr align="center">
                <td width="225" style="border: 1px solid black;border-collapse: collapse;"><strong>Propiétaire</strong></td>
                <td width="225" style="border: 1px solid black;border-collapse: collapse;"><strong>Adresse</strong></td>
                <td width="150" style="border: 1px solid black;border-collapse: collapse;"><strong>Marque</strong></td>
                <td width="150" style="border: 1px solid black;border-collapse: collapse;"><strong>Immatriculation</strong></td>
            </tr>
            {% for ct_reception in ct_receptions %}
                <tr>
                    <td style="border: 1px solid black;border-collapse: collapse;">{{ ct_reception.rcpProprietaire }}</td>
                    <td style="border: 1px solid black;border-collapse: collapse;">{{ ct_reception.rcpAdresse }}</td>
                    <td style="border: 1px solid black;border-collapse: collapse;">{{ ct_reception.ctVehiculeId.ctMarqueId }}</td>
                    <td style="border: 1px solid black;border-collapse: collapse;">{{ ct_reception.rcpImmatriculation }} </td>
                    <td>{{ ct_reception.rcpCreated ? ct_reception.rcpCreated|date('d/m/Y H:i:s') : '' }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="15">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
        </table>
    </body>
</html>
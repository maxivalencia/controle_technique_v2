{% extends 'base.html.twig' %}

{% block title %}Liste Centre{% endblock %}

{% block body %}
    <h1>Liste Centre</h1>

    <table class="table liste">
        <thead>
            <tr>
                <th>Id</th>
                <th>nom</th>
                <th>code</th>
                <th>created_at</th>
                <th>updated_at</th>
                <th>centre mère</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ct_centre in ct_centres %}
            <tr>
                <td>{{ ct_centre.id }}</td>
                <td>{{ ct_centre.ctrNom }}</td>
                <td>{{ ct_centre.ctrCode }}</td>
                <td>{{ ct_centre.ctrCreatedAt ? ct_centre.ctrCreatedAt|date('Y-m-d') : '' }}</td>
                <td>{{ ct_centre.ctrUpdatedAt ? ct_centre.ctrUpdatedAt|date('Y-m-d') : '' }}</td>
                <td>{{ ct_centre.centreMere }}</td>
                <td>
                    <a href="{{ path('app_ct_centre_show', {'id': ct_centre.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('app_ct_centre_edit', {'id': ct_centre.id}) }}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <div class="navigation">
        {{ knp_pagination_render(ct_centres) }}
    </div> #}

    <a href="{{ path('app_ct_centre_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Ajouter</a>
{% endblock %}

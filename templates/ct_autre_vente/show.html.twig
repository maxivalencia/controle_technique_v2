{% extends 'base.html.twig' %}

{% block title %}Autre Vente{% endblock %}

{% block body %}
    <h1>Autre Vente</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ct_autre_vente.id }}</td>
            </tr>
            <tr>
                <th>est-svisible</th>
                <td>{{ ct_autre_vente.auvIsVisible ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>created_at</th>
                <td>{{ ct_autre_vente.auvCreatedAt ? ct_autre_vente.auvCreatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Controle_id</th>
                <td>{{ ct_autre_vente.controleId }}</td>
            </tr>
        </tbody>
    </table>
	
	<table class="table" style="width:450px;">
        <tbody>
            <tr>
                <td style="width:150px;">
                    <a href="{{ path('app_ct_autre_vente_index') }}" class="btn btn-primary"><i class="fa fa-arrow-left" aria-hidden="true"></i> Retour</a>
                </td>
                <td style="width:150px;">
                    <a href="{{ path('app_ct_autre_vente_edit', {'id': ct_autre_vente.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i> Modifier</a>
                </td>
                <td style="width:150px;">
                    {{ include('ct_autre_vente/_delete_form.html.twig') }}
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
